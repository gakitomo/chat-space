.main_chat
  .group-info
    .left-box
      .current-group
        #{@group.name}
      .member-list
        Members:
        - @group.users.each do |user|
          %span.member-list__user #{user.name}
        
    = link_to edit_group_path(@group), class:"edit-btn" do
      Edit

  .message-list
    = render @messages

  .message-form
    = form_for [@group, @message] do |f|
      .new-message
        .input-form
          = f.text_field :content, class: "input-form__new-text", placeholder: "type a message"
          = f.label :image, class: "input-form__new-image" do
            = icon('fa', 'image')
            = f.file_field :image, class: "hidden"
        =f.submit "Send",class: "submit-btn"